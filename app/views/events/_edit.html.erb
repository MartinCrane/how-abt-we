<div class="modal-header">
   <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
   <h3 id="modal-window">Edit Event</h3>
 </div>
 <div class="modal-body">
  <%= form_for event do |f| %>
    <div class="row">
      <div class="col-md-6">
        <%= f.label :name, id: 'label' %>
        <%= f.text_field :name, id: 'input' %><br>
      </div>

      <div class="col-md-6">
        <%= f.label :capacity, id: 'label' %>
        <%= f.number_field :capacity, id: 'input' %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <%= f.label :event_date, id: 'label' %>
        <%= f.date_field :event_date, id: 'input' %><br>
      </div>

      <div class="col-md-6">
        <%= f.label :start_time, id: 'label' %>
        <%= f.time_field :start_time, id: 'input' %><br>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <%= f.label :end_time, id: 'label' %>
        <%= f.time_field :end_time, id: 'input' %><br>

      </div>
      <div class="col-md-6">
        <%= f.label :location_id, id: 'label' %>
        <%= f.collection_select(:location_id, Location.all, :id, :name, {:include_blank => true}, {id: 'input'}) %><br>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12" id="move-submit">
        <%= f.submit "Update Event", class: "submit" %>
      </div>
    </div>
  <% end %>
</div>
<div class="modal-footer">
  <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
  <!-- <button class="btn btn-primary">Save changes</button> -->
</div>
