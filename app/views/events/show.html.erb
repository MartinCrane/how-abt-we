<h1 style="font-size: 50px"><%= @event.name %></h1>
<p>Creator of this event: <%= @event.creator.username %></p>
<p>Capacity: <%= @event.capacity %></p>
<p>Date: <%= @event.event_date %></p>
<p>Start: <%= @event.start_time %></p>
<p>End: <%= @event.end_time %></p>
<p>Location: <%= @event.location.name if @event.location %></p>
<% if @event.location %>
  <%= render partial: 'locations/location_map', locals: {location: @event.location, key: @key} %>
<% end %>

<% if @event.creator==current_user && (@event.event_date.nil? || @event.event_date >= Date.today) %>
--- perhaps show this in a modal -- <br />
  <%= render partial: 'events/form', locals:{event: @event} %>
-----------------------------------
<% end %>

<% if @attending %>
  <h2>You are attending this event!</h2>
  <%= form_for [@event, @attending], method: :delete do |f| %>
  <%= f.submit "I can't attend" %>
  <% end %>
<% else %>
  <h2>Are you attending?</h2>
  <%= form_for [@event, @participant] do |f| %>
  <%= f.submit "I want to go!" %>
  <% end %>
<% end %>



<h2>Participants</h2>
<% if @participants %>
<% @participants.each do |participant| %>
  <%= participant.account.username %><br />
<% end %>
<% else %>
YOU HAVE NO FRIENDS :(
<% end %>

<h2>Comments</h2>
<%= form_for [@event, @comment] do |f| %>
<%= f.text_area :comment %>
<%= f.submit "Make a comment" %>
<% end %>
<%= render partial: 'events/comment', collection: @comments.order("created_at DESC") %>
