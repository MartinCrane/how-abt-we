<div class="col-md-8">
    <h1 id="title" style="font-size: 50px"><%= @event.name %></h1>
    <p>Creator of this event: <%= @event.creator.username %></p>
    <p>Capacity: <%= @event.capacity %></p>
    <p>Date: <%= @event.event_date %></p>
    <p>Start: <%= @event.start_time %></p>
    <p>End: <%= @event.end_time %></p>
    <p>Location: <%= link_to @event.location.name, @event.location if @event.location %></p>
    <p>Address: <%= @event.location.formatted_address if @event.location %></p>

    <h2>Participants</h2>
    <%= @event.creator.username %> <em>(host)</em><br />
    <% if @participants %>
    <% @participants.each do |participant| %>
      <%= participant.account.username %><br />
    <% end %>
    <% else %>
    YOU HAVE NO FRIENDS :(
    <% end %>

    <% if @event.location %>
      <%= render partial: 'locations/location_map', locals: {location: @event.location, key: @key} %>
    <% end %>
    <% if @event.creator==current_user && (@event.event_date.nil? || @event.event_date >= Date.today) %>
    --- perhaps show this in a modal -- <br />
      <%= render partial: 'events/form', locals:{event: @event} %>
    -----------------------------------
    <% end %>
  </div>
  <div class="col-md-4">
  <% if @event.event_date >= Date.today %>
    <% if @attending %>
      <h2>You are attending this event!</h2>
      <%= form_for [@event, @attending], method: :delete do |f| %>
      <%= f.submit "I can't attend", class: "btn btn-primary" %>
      <% end %>
    <% else %>
      <h2>Are you attending?</h2>
      <%= form_for [@event, @participant] do |f| %>
      <%= f.submit "I want to go!", class: "btn btn-primary" %>
      <% end %>
    <% end %>
  <% else %>
    <h2>This event is over</h2>
    If you attended, please rate this event
  <% end %>





    <h2>Comments</h2>
    <%= form_for [@event, @comment] do |f| %>
    <%= f.text_area :comment %>
    <%= f.submit "Make a comment", class: "btn btn-primary" %>
    <% end %>
    <%= render partial: 'events/comment', collection: @comments.order("created_at DESC") %>

  </div>
