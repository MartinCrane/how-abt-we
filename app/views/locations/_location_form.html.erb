<%= form_for @location, url: locations_confirm_path, method: :post do |f| %>
<div class="row">
  <div class="col-md-6">
    <%= f.label :name, id: 'label' %>
    <%= f.text_field :name, id: 'input' %>
  </div>

  <div class="col-md-6">
    <%= f.label :address, id: 'label' %>
    <%= f.text_field :address, id: 'input' %>
  </div>
</div>
<div class="row">
  <div class="col-md-12" id="move-submit">
    <%= f.submit class: 'submit', id: 'widen' %>
  </div>
</div>
<% end %>
